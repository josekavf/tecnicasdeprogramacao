<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="600.0" maxWidth="600.0" minHeight="600.0" minWidth="600.0" prefHeight="600" prefWidth="600" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projetoIntegrador.view.PesquisaView">
    <children>
      <TableView fx:id="tabCity" prefHeight="600" prefWidth="540">
        <columns>
          <TableColumn fx:id="tabCityCod" prefWidth="75.0" text="Cído IBGE" />
          <TableColumn fx:id="tabCityMunicipio" prefWidth="75.0" text="Município" />
            <TableColumn fx:id="tabCityMicroregiao" prefWidth="75.0" text="Microregião" />
            <TableColumn fx:id="tabCityUF" prefWidth="75.0" text="Estado" />
            <TableColumn fx:id="tabCityRegiao" prefWidth="75.0" text="Região Geográfica" />
            <TableColumn fx:id="tabCityArea" prefWidth="75.0" text="Área (km²)" />
            <TableColumn fx:id="tabCityPopulacao" prefWidth="75.0" text="População" />
            <TableColumn fx:id="tabCityDomicilio" prefWidth="75.0" text="Domicílios" />
            <TableColumn fx:id="tabCityPIB" prefWidth="75.0" text="PIB total (R$ mil)" />
            <TableColumn fx:id="tabCityIDH" prefWidth="75.0" text="IDH Geral" />
            <TableColumn fx:id="tabCityRendaMedia" prefWidth="75.0" text="Renda Média" />
            <TableColumn fx:id="tabCityRendaNominal" prefWidth="75.0" text="Renda Nominal" />
            <TableColumn fx:id="tabCityPEA" prefWidth="75.0" text="PEA Dia" />
            <TableColumn fx:id="tabCityIDHEduc" prefWidth="75.0" text="IDH Educação" />
            <TableColumn fx:id="tabCityIDHLong" prefWidth="75.0" text="IDH Longividade" />
        </columns>
      </TableView>
      <AnchorPane prefHeight="53.0" prefWidth="560.0">
         <children>
            <Button fx:id="btCarregar" layoutX="7.0" layoutY="1.0" onAction="#carregarCidades" text="Carregar" />
            <Button fx:id="btIncluir" disable="true" layoutX="72.0" layoutY="1.0" mnemonicParsing="false" onAction="#incluirCidade" text="Incluir" />
            <Button fx:id="btEditar" disable="true" layoutX="124.0" layoutY="1.0" mnemonicParsing="false" onAction="#editarCidade" prefHeight="25.0" prefWidth="55.0" text="Editar" />
            <Button fx:id="btEstatisticas" disable="true" layoutX="262.0" layoutY="1.0" mnemonicParsing="false" onAction="#abrirEstatisticas" text="Estatísticas" />
            <Button fx:id="btRemover" disable="true" layoutX="192.0" layoutY="1.0" mnemonicParsing="false" onAction="#removerCidade" text="Remover" />
            <Button fx:id="btSair" layoutX="512.0" layoutY="1.0" mnemonicParsing="false" onAction="#sair" text="Sair" />
            <Button fx:id="btSalvar" disable="true" layoutX="351.0" layoutY="1.0" mnemonicParsing="false" onAction="#salvarAlteracoes" text="Salvar" />
            <Button fx:id="btExportar" disable="true" layoutX="420.0" layoutY="1.0" mnemonicParsing="false" onAction="#exportarDados" text="Exportar" />
         </children>
      </AnchorPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
